{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: start",
			"type": "shell",
			"problemMatcher": [
				"$tsc-watch"
			],
			"command": "npm start",
			"windows": {
				"command": "npm start"
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "tsc: watch - user/tsconfig.json",
			"type": "shell",
			"problemMatcher": [
				"$tsc-watch"
			],
			"command": "npx tsc -w",
			"windows": {
				"command": "npx tsc -w"
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}
