{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"typeRoots": [
			"node_modules/@types"
		],
		"baseUrl": "./src",
		"paths": {
			"@assets/*": [
				"assets/*"
			],
			"@components/*": [
				"components/*"
			],
			"@css/*": [
				"css/*"
			],
			"@models/*": [
				"models/*"
			],
			"@pages/*": [
				"pages/*"
			],
		}
	},
	"include": [
		"src"
	]
}
